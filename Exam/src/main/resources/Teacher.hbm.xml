<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.exam.domain.Teacher" table="teacher" schema="exam">
        <id name="thId" column="th_id"/>
        <property name="thName" column="th_name"/>
        <property name="thUsername" column="th_username"/>
        <property name="thPassword" column="th_password"/>
    </class>
</hibernate-mapping>